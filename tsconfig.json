{
  "compilerOptions": {
    "target": "ES2019",                  
    "module": "commonjs",                     
    "outDir": "dist",   
    "declaration": true,
    "sourceMap": true,                      
    "rootDir": "src",                        
    "strict": true,                     
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
